{
    "name": "Laverna",
    "id": "laverna",
    "description": {
        "en": "Note taking app"
    },
    "licence": "GPL",
    "developer": {
        "name": "Laverna Team",
        "email": "lavernaproject@gmail.com",
        "url": "https://github.com/Laverna/laverna"
    },
    "multi_instance": "true",
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "ask": {
                    "en": "Choose a domain for Laverna"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "ask": {
                    "en": "Choose a path for Laverna"
                },
                "example": "/laverna",
                "default": "/laverna"
            },
            {
                "name": "admin",
                "ask": {
                    "en": "Choose an admin user"
                },
                "example": "johndoe"
            },
            {
                "name": "is_public",
                "ask": {
                    "en": "Is it a public application ?"
                },
                "choices": ["Yes", "No"],
                "default": "Yes"
            }
        ]
    }
}
